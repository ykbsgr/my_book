  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :publisher %><br>
    <%= f.text_field :publisher,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :releasedate %><br>
    <%= f.date_select :releasedate,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :isbn_code %><br>
    <%= f.text_field :isbn_code,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.text_field :image,class:"form-control" %>
  </div>
