<div class="col-md-12">
<p id="notice"><%= notice %></p>

<h1>蔵書一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>書籍名</th>
      <th>著者名</th>
      <th>金額</th>
      <th>出版社</th>
      <th>出版日</th>
      <th>Isbn</th>
      <th>画像</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.book_name %></td>
        <td><%= library.write_name %></td>
        <td><%= number_to_currency(library.price 123456789, :unit => "￥") %></td>
        <td><%= library.publisher %></td>
        <td><%= library.releasedate %></td>
        <td><%= library.isbn_code %></td>
        <td><img src="<%= library.image %>" class="img-responsive" alt="表紙画像"></td>
        <td><%= link_to '閲覧', library, class:"btn btn-info btn-xs" %></td>
        <td><%= link_to '編集', edit_library_path(library), class:"btn btn-info btn-xs" %></td>
        <td><%= link_to '削除', library,class:"btn btn-info btn-xs", method: :delete, data: { confirm: '本当に削除して良いですか' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい書籍の登録', new_library_path, class:"btn btn-primary btn-lg" %>
</div>
